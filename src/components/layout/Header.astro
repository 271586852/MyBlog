---
import { siteConfig, menuLinks } from '@/site-config'
import { Image } from 'astro:assets'
import avatar from '@/assets/doge.jpg'
---

<div class="interactive-card profile-card">
  <div class="avatar" style="width:50px; height:50px; background:#333; margin-bottom:10px; border-radius: 4px;">
    <Image
      src={avatar}
      alt="profile"
      width={50}
      height={50}
      style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;"
    />
  </div>
  <h3 style="color: var(--text-main); margin-bottom: 5px;">{siteConfig.author}</h3>
  <p style="font-size: 12px; color: var(--text-dim); font-family: var(--font-mono);">Lv.0 ACCESS</p>
</div>

<nav class="nav-menu">
  <ul>
    {
      menuLinks.map((item) => (
        <li>
          <a href={item.link} data-astro-prefetch>
            {item.label.toUpperCase()} <span>//</span>
          </a>
        </li>
      ))
    }
    <li>
      <a href="/search">
        SEARCH <span>//</span>
      </a>
    </li>
  </ul>
</nav>
